<footer class="border-t border-black/10 bg-[var(--color-secondary)] text-white">
  <div class="mx-auto flex max-w-6xl flex-col gap-6 px-4 py-6 text-sm text-white/80">
    <p>Â© 2025 KESK English. Powered by contextHub.</p>
    <% 
      const primaryMenuId = menu?.id || null;
      const footerMenuData = footerMenu && footerMenu.items && footerMenu.items.length
        ? footerMenu
        : null;
    %>
    <% if (footerMenuData && (!primaryMenuId || footerMenuData.id !== primaryMenuId)) { %>
      <nav class="flex flex-wrap gap-3 text-xs uppercase tracking-[0.3em]">
        <% footerMenuData.items.forEach((item) => {
             if (!item || !item.href) return;
        %>
          <a
            href="<%= item.href %>"
            target="<%= item.target || '_self' %>"
            class="inline-flex items-center gap-1 rounded-full border border-white/20 px-3 py-1 text-white/80 transition hover:border-white/40 hover:text-white"
          >
            <span><%= item.label %></span>
          </a>
        <% }) %>
      </nav>
    <% } %>
  </div>
</footer>
